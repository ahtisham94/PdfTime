<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle"
            >
            <corners android:radius="3dp" />
            <solid android:color="@color/colorOrangePrimaryDark" />
            <stroke
                android:width="2dip"
                android:color="@color/colorOrangePrimaryDark" />

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <solid android:color="@color/colorOrangeStatusBar" />
            <stroke
                android:width="2dip"
                android:color="@color/colorOrangeStatusBar" />

        </shape>
    </item>
</selector>